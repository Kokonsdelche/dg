{
        "name": "dg-full-stack",
        "version": "1.0.0",
        "description": "فروشگاه تخصصی شال و روسری",
        "main": "index.js",
        "scripts": {
                "start": "cd server && npm start",
                "dev": "cd server && npm run dev",
                "client": "cd client && npm start",
                "server": "cd server && npm run dev",
                "build": "cd server && npm install",
                "install-deps": "cd client && npm install && cd ../server && npm install",
                "test": "cd client && npm test",
                "clean": "cd client && rmdir /s /q build node_modules && cd ../server && rmdir /s /q node_modules",
                "init-db": "node database/init-database.js",
                "backup-db": "node database/backup-restore.js backup",
                "restore-db": "node database/backup-restore.js restore",
                "list-backups": "node database/backup-restore.js list",
                "setup-complete": "npm run install-deps && npm run init-db && cd server && npm run setup",
                "production": "cd client && npm run build && cd ../server && npm start",
                "heroku-postbuild": "npm run install-deps && npm run build",
                "vercel-build": "cd client && npm install && npm run build"
        },
        "keywords": [
                "shop",
                "hijab",
                "scarf",
                "ecommerce",
                "react",
                "nodejs",
                "mongodb",
                "persian"
        ],
        "author": "شما",
        "license": "MIT",
        "devDependencies": {
                "concurrently": "^8.2.2"
        },
        "engines": {
                "node": ">=16.0.0",
                "npm": ">=8.0.0"
        }
}