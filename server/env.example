# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/shal-roosari-shop
# For production (MongoDB Atlas):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/shal-roosari-shop?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRE=30d

# Email Configuration (for order notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Gateway (for future implementation)
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
PAYMENT_CALLBACK_URL=http://localhost:3000/payment/verify

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp

# Admin Default Credentials
DEFAULT_ADMIN_EMAIL=admin@shalroosari.com
DEFAULT_ADMIN_PASSWORD=admin123456

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# Production URLs (uncomment for production)
# CLIENT_URL=https://your-domain.com
# SERVER_URL=https://api.your-domain.com 